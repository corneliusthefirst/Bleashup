<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <!--<item name="colorAccent">@color/white</item>-->
        <item name="android:textColorPrimaryInverse">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="android:buttonStyle">@style/myDefaultButton</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="titleTextColor">@color/main</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>
    <style name="myDefaultButton">
        <item name="android:textColor">@color/main</item>
    <!-- other stuff you want your buttons to inherit by default -->
    </style>
    <style name="gallery_checkBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
    </style>

</resources>
